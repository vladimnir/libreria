<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Magento_Customer::customer</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.title">
            <action method="setPageTitle">
                <argument name="pageTitle" xsi:type="string">Manage regions in addresses</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="region_listing"/>
        </referenceContainer>
        <referenceContainer name="legal.copyright">
            <block class="Magento\Backend\Block\Page\Copyright" name="region-copyright" template="PHPCuong_Region::footer/copyright.phtml"/>
            <referenceBlock name="copyright" remove="true"/>
        </referenceContainer>
        <referenceContainer name="legal.system">
            <referenceBlock name="report" remove="true"/>
            <referenceBlock name="version" remove="true"/>
            <block class="Magento\Framework\View\Element\Template" name="region-version" template="PHPCuong_Region::footer/version.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="region-report" template="PHPCuong_Region::footer/report.phtml"/>
        </referenceContainer>
    </body>
</page>
