$helper     = $this->helper('Mageplaza\Shopbybrand\Helper\Data');
$allChars   = $block->getAlphabet();
$categories = $block->getCategories();
?>
<script type="text/javascript">
    require([
            'jquery',
            'Mageplaza_Shopbybrand/js/lib/mixitup.min',
            'Mageplaza_Shopbybrand/js/quick-view',
            'Mageplaza_Shopbybrand/js/modal-popup'
        ],
        function ($, mixitup, quickview, modalPopup) {
            window.quickviewUrl = '<?php echo $helper->getQuickViewUrl();?>';
            mixitup('.brand-mix-container');

            $(".brand-options li").on('click', function () {
                if (!$(this).hasClass('disabled')) {
                    $(".brand-options li").removeClass("active");
                    $(this).addClass("active");
                }
            });

            $(".category-nav-list li").on('click', function () {
                if (!$(this).hasClass('disabled')) {
                    $(".category-nav-list li").removeClass("active");
                    $(this).addClass("active");
                }
            });

            $(".navigation li.mpbrand-top-link").addClass("active");
        }
    );
</script>

<div class="block block-brand-list">
    <div class="block-title">
        <?php if ($helper->getBrandConfig('brand_filter/enabled_alpha_filter')) : ?>
            <ul class="nav brand-options navbar-nav controls">
                <li id="mp-first-opt" class="control active">
                    <a class="filter mp-option-item" data-filter="all"><?php echo __('All') ?></a>
                </li>
                <?php foreach ($allChars as $_char): ?>
                    <?php $_numchar["char"] = (is_numeric($_char["char"])) ? 'num' . $_char["char"] : $_char["char"]; ?>
                    <?php if ($_char['active']) : ?>
                    <li class="control">
                        <a class="filter mp-option-item"
                            <?php echo 'data-filter=".' . $_numchar["char"] . '"'; ?>>
                            <?php echo __(isset($_char['label']) ? $_char['label'] : $_char['char']); ?>
                        </a>
                    </li>
                    <?php else: ?>
                        <li class="disabled">
                            <a class="disabled mp-option-item">
                                <?php echo __(isset($_char['label']) ? $_char['label'] : $_char['char']); ?>
                            </a>
                        </li>
                    <?php endif; ?>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
            <?php if ($helper->getBrandConfig('brand_filter/enabled_cat_filter')) : ?>
                <ul class="nav brand-options category-nav-list navbar-nav controls" style="margin-bottom: 30px;">
                    <li id="mp-first-opt" class="control active">
                        <a class="filter mp-option-item"
                           data-filter="all"><?php echo __('All Category') ?></a>
                    </li>
                    <?php foreach ($categories as $category) : ?>
                        <?php if ($block->getBrandQty($category->getId())) : ?>
                        <li class="control">
                            <a class="filter mp-option-item" <?php echo 'data-filter=".cat' . $block->getCatNameFilter($category->getName()) . '"'; ?>><?php echo $category->getName(); ?></a>
                        </li>
                        <?php else: ?>
                        <li class="disabled">
                            <a class="disabled mp-option-item"><?php echo $category->getName(); ?></a>
                        </li>
                        <?php endif; ?>
                    <?php endforeach; ?>
                </ul>
            <?php endif; ?>
        <div style="clear: both"></div>
    </div>

    <div class="block-content brand-mix-container products wrapper grid products-grid">
        <?php echo ($helper->getBrandConfig('brandlist_style') == 1)
            ? $this->getChildHtml('alphabet')
            : $this->getChildHtml('listing');
        ?>
    </div>
    <div id="quick-view" style="display:none;">
        <div class="container-fluid">
            <div class="brand-info-container">
                <div class="brand_title"></div>
                <div class="img-content">
                    <img class="quickview_img">
                </div>
                <div class="brand_description"></div>
            </div>
            <div class="related-product-container">
                <div class="related-product-modal-title" style="float: initial;"><?php echo __('Related Products') ?></div>
                <div class="related-product-modal-content"></div>
            </div>
        </div>
        <div id="ln_overlay" class="ln_overlay">
            <div class="loader">
                <img src="<?php echo $block->getViewFileUrl('images/loader-1.gif'); ?>" alt="<?php echo __('Loading...') ?>">
            </div>
        </div>
    </div>
</div>
