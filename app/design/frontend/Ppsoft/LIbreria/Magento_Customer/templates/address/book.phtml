    </div>
</div>

<div class="block block-addresses-list display">
    <?php if ($_pAddsses = $block->getAdditionalAddresses()): ?>
    <div class="block-title"><strong><?= $block->escapeHtml(__('Direccion(es) Adicional(es)')) ?></strong></div>
    <div class="block-content">
            <ol class="items addresses">
                <?php foreach ($_pAddsses as $_address): ?>
                    <li class="item">
                        <address>
                            <?= $block->getAddressHtml($block->getAddressById($_address->getId())) ?>
                        </address>
                        <div class="item actions">
                            <?php if ($_defPAddsses == null || true) : ?>
                                <a class="action edit"
                                   href="<?= $block->escapeUrl($block->getUrl('posaddress/address/setdefault', ['id' => $_address->getId()])) ?>"><span><?= $block->escapeHtml(__('Elegir como principal')) ?></span></a>
                            <?php endif; ?>
                            <a class="action edit" href="<?= $block->escapeUrl($block->getUrl('customer/address/edit', ['id' => $_address->getId()])) ?>"><span><?= $block->escapeHtml(__('Editar')) ?></span></a>
                            <a class="action delete" href="#" role="delete-address" data-address="<?= $block->escapeHtmlAttr($_address->getId()) ?>"><img src="<?php echo $this->getViewFileUrl('images/delete-icon.png'); ?>" alt="delete icon"></a>
                        </div>
                    </li>
                <?php endforeach; ?>
            </ol>
    </div>
    <?php endif ?>
</div>
