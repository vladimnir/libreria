<div class="block block-addresses-default">
    <div class="block-content">

        <?php if ($_defPAddsses = $block->getDefaultShipping()): ?>
            <div class="box box-address-shipping">
                <strong class="box-title">
                    <span><?= $block->escapeHtml(__('Dirección principal')) ?></span>
                </strong>
                <div class="box-content">
                    <address>
                        <?= $block->getAddressHtml($block->getAddressById($_defPAddsses)) ?>
                    </address>
                </div>
                <div class="box-actions">
                    <span>
                        <?= $block->escapeHtml(__('Direccion Principal')) ?>
                    </span>
                    <a class="action edit" href="<?= $block->escapeUrl($block->getAddressEditUrl($_defPAddsses)) ?>">
                        <span><?= $block->escapeHtml(__('Editar')) ?></span>
                    </a>
                    <li class="item">
                    <a class="action delete" href="#" role="delete-address" data-address="<?= $block->escapeHtmlAttr($_defPAddsses) ?>"> <img src="<?php echo $this->getViewFileUrl('images/delete-icon.png'); ?>" alt="delete icon"></a>
                    </li>
                </div>
            </div>
