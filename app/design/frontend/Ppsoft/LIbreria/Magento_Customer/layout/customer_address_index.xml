<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <update handle="custom_address"/>
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="customer_address_head_components" template="Magento_Customer::js/components.phtml"/>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Inicio</item>
                    <item name="label" xsi:type="string">Inicio</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Mis Direcciones</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Mis Direcciones</item>
                    <item name="label" xsi:type="string">Mis Direcciones</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/address/index</item>
                </argument>
            </action>
        </referenceBlock>

        <!-- Remove address grid -->
        <referenceBlock name="address_grid" remove="true"/>
    </body>
</page>
