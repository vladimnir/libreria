<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">INGRESAR A MI CUENTA</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Inicio</item>
                    <item name="label" xsi:type="string">Inicio</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Customer</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Cuenta del Cliente</item>
                    <item name="label" xsi:type="string">Cuenta del Cliente</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account/index</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Login</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Acceso del Cliente</item>
                    <item name="label" xsi:type="string">Acceso del Cliente</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account/login</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
