<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="customer_account_edit_head_components" template="Magento_Customer::js/components.phtml"/>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Mis Datos</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Inicio</item>
                    <item name="label" xsi:type="string">Inicio</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Customer</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Mis Datos</item>
                    <item name="label" xsi:type="string">Mis Datos</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account/edit</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block name="back-cuenta" as="back-cuenta" template="Magento_Customer::back-cuenta.phtml" before="page.main.title"/>
            <block class="Magento\Customer\Block\Form\Edit" name="customer_edit" template="Magento_Customer::form/edit.phtml" cacheable="false">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </referenceContainer>
        <move element="page.main.title" destination="content" after="back-cuenta"/>
    </body>
</page>