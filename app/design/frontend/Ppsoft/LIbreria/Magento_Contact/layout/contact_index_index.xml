<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Contacto Ayuda</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="ayuda">
                <arguments>
                    <argument name="block_id" xsi:type="string">ayuda</argument>
                </arguments>
            </block>
            <referenceBlock name="page.main.title" remove="true" />
            <referenceBlock name="contactForm" remove="true" />
        </referenceContainer>
    </body>
</page>
