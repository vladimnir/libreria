<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Inicio</item>
                    <item name="label" xsi:type="string">Inicio</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Catalog</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Catalog</item>
                    <item name="label" xsi:type="string">Catalog</item>
                    <item name="link" xsi:type="string">{{baseUrl}}catalog</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Product Compare</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Product Compare</item>
                    <item name="label" xsi:type="string">Product Compare</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
