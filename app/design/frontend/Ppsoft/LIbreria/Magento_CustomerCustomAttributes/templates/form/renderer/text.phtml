        <label class="label" for="<?= $block->getHtmlId() ?>"><span><?= $block->escapeHtml(__('Teléfono Celular')) ?></span></label>
        <div class="control">
            <input type="text" id="<?= $block->getHtmlId() ?>" name="<?= /* @escapeNotVerified */ $block->getFieldName() ?>" value="<?= /* @escapeNotVerified */ $block->getEscapedValue() ?>" class="input-text<?= $block->getHtmlClass() ?> <?= $requiredInput ?>"<?= $extraField ?>/>
            <?php if ($_message = $block->getAdditionalDescription()) : ?>
                <div class="note"><?= /* @escapeNotVerified */ $_message ?></div>
            <?php endif; ?>
